{
  "name": "laundry-machine-timer",
  "version": "1.0.0",
  "description": "A web application for managing laundry machine timers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend && npm run copy:public",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "copy:public": "cp -r src/public dist/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "vercel-build": "NODE_ENV=production npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist && rm -rf src/public/js",
    "db:migrate": "ts-node src/database/migrate.ts migrate",
    "db:setup": "ts-node src/database/migrate.ts setup",
    "db:reset": "ts-node src/database/migrate.ts reset",
    "db:seed": "ts-node src/database/seed.ts seed",
    "db:reseed": "ts-node src/database/seed.ts reseed",
    "db:stats": "ts-node src/database/seed.ts stats"
  },
  "keywords": [
    "laundry",
    "timer",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
